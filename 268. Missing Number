class Solution {
public:
     int missingNumber(vector<int>& nums) {
        int n = nums.size();
        int x = 0;
        for(int i=0;i<=n;i++){
            x ^= i;
        }
        for(int i=0;i<n;i++){
            x^= nums[i];
        }
         //n*(n+1)/2 - array_sum is another solution
        return x;
    }
};
