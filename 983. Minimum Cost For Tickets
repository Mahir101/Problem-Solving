class Solution:
    def mincostTickets(self, days: List[int], costs: List[int]) -> int:
        dp = {}
        
        def recur(i):
            if i == len(days):
                return 0
            if i in dp:
                return dp[i]
            
            dp[i] = float("inf")
            for d,c in zip([1,7,30], costs):
                j = i;
                while j < len(days) and days[j] < days[i]+d:
                    j += 1
                
                dp[i] = min(dp[i], c + recur(j))
            
            return dp[i]
        
        return recur(0)
